#include <raylib.mlang>

#extern func loop();
func loop() {
    rl::begin_drawing();
        rl::clear_background(rl::get_color(0xffaaaaff));
    rl::end_drawing();

    if(!rl::window_should_close())
        loop();
}

func main() {
    rl::init_window(1200, 675, "hello raylib");
    loop();
    rl::close_window();

}
